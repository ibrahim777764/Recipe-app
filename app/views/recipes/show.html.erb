<div class="overflow-x-auto">
  <div class="min-w-screen min-h-screen bg-gray-100 flex pt-20 justify-center bg-gray-100 font-sans overflow-hidden">
    <div class="w-full lg:w-5/6">
      <div class="block rounded-lg shadow-lg bg-white px-6 py-12 md:px-12 ">
        <div class="actions text-center mb-6">
          <strong>Recipe Name: </strong><%= @recipe.name  %>
        </div>
        <div class="text-right">
          <div class="flex justify-end">
            <div class="mr-5">
              <strong>Public:</strong>
            </div>
            <div>
              <% if can? :manage, @recipe %>
                <%= button_to toggle_public_path(id:@recipe.id),:method => :post, data: { turbo: false } do%>
                  <%if @recipe.public %>
                    <label for="toggle-example-checked" class="flex items-center cursor-pointer relative">
                      <input type="checkbox" id="toggle-example-checked" class="sr-only" checked="">
                      <div class="toggle-bg bg-gray-200 border-2 border-gray-200 h-6 w-11 rounded-full"></div>
                    </label>
                  <% else %>
                    <label for="toggle-example" class="flex items-center cursor-pointer relative mb-4">
                      <input type="checkbox" id="toggle-example" class="sr-only">
                      <div class="toggle-bg bg-gray-200 border-2 border-gray-200 h-6 w-11 rounded-full"></div>
                    </label>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="mb-6">Preparation time <%= @recipe.preparation_time  %> hours</div>
        <div class="mb-6">Cooking time <%= @recipe.cooking_time  %> hours</div>
        <div class="mb-6">Steps go here...</div>
        <div class="flex flex-row mb-6">
          <div class="flex gap-6">
            <% if @recipe.user_id == current_user.id %>
              <div class="flex justify-content-center align-items-center gap-6 my-5 pb-4">
                <%=link_to 'Generate shopping list', shopping_list_path, class: " inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out" %>
                <%= render 'ingredient' %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="actions  mb-6">
          <div><strong>Description: </strong></div>
          <p><%= @recipe.description %></p>
        </div>
      </div>
      <div class="bg-white shadow-md rounded my-6">
        <table class="min-w-max w-full table-auto">
          <thead>
            <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
              <th class="py-3 px-6 text-left">Food</th>
              <th class="py-3 px-6 text-left">Quantity</th>
              <th class="py-3 px-6 text-left">Value</th>
              <th class="py-3 px-6 text-center">Action</th>
            </tr>
          </thead>
          <tbody class="text-gray-600 text-sm font-light">
            <% @recipe.recipe_foods.each do |recipe| %>
              <tr class="border-b border-gray-200 hover:bg-gray-100">
                <td class="py-3 px-6 text-left whitespace-nowrap">
                  <div class="flex items-center">
                    <%= recipe.food.name %>
                  </div>
                </td>
                <td class="py-3 px-6 text-left">
                  <div class="flex items-center">
                    <%= recipe.quantity %>
                  </div>
                </td>
                <td class="py-3 px-6 text-left">
                  <div class="flex items-center">
                    <%=number_to_currency recipe.quantity * recipe.food.price %>
                  </div>
                </td>
                <td class="py-3 px-6 text-center">
                  <div class="flex item-center justify-center">
                    <div class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110">
                      <% if current_user.id == recipe.recipe.user_id %>
                        <%= button_to user_recipe_recipe_food_path(current_user, @recipe, recipe), method: :delete,data: { confirm: 'Are you sure?' } do %>
                          <span >
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                            </svg>
                          </span>
                        <%end%>
                      <% end %>
                    </div>
                  </div>
                </td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
